rm -rf "$RUTA"/wine/data/drive_c/windows/system32/DPNHPAST.dll
rm -rf "$RUTA"/wine/data/drive_c/windows/system32/dpnlobby.dll
rm -rf "$RUTA"/wine/data/drive_c/windows/system32/DPNLOBBY.dll
