# Agregar valoResolucion de DirectX & DirectPlay al Registro
# - Estos son de DirectPlay
echo "REGEDIT4" >> arreglos.reg
echo "" >> arreglos.reg
echo "[HKEY_CURRENT_USER\Software\Wine\DllOverrides]" >> arreglos.reg
# Windows 98
echo '"dplayx"="native,builtin"' >> arreglos.reg
