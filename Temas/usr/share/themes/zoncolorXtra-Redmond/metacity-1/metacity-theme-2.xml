    <!--<gradient type="vertical" x="0" y="0" width="width" height="top_height">
        <color value="shade/gtk:base[PRELIGHT]/1.175" />
        <color value="shade/gtk:base[PRELIGHT]/1.06" />
        <color value="shade/gtk:base[PRELIGHT]/1.0" />
    </gradient>-->
    <!--<gradient type="vertical" x="0" y="0" width="width" height="top_height - 6">
        <color value="shade/gtk:base[ACTIVE]/1.0" />
        <color value="shade/gtk:base[PRELIGHT]/1.02" />
    </gradient>
    <gradient type="vertical" x="0" y="top_height - 6" width="width" height="top_height - 1">
        <color value="shade/gtk:base[PRELIGHT]/1.02" />
        <color value="shade/gtk:base[PRELIGHT]/1.0" />
    </gradient>-->
    
    <!-- Titlebar outline -->
<!--    <rectangle color="shade/gtk:base[PRELIGHT]/1.0" filled="false" x="0" y="0" width="width - 1" height="top_height - 1"/>-->
    <line color="shade/gtk:base[PRELIGHT]/0.8" x1="0" x2="0" y1="0" y2="top_height"/>
    <line color="shade/gtk:base[PRELIGHT]/0.8" x1="width-1" x2="width-1" y1="0" y2="top_height"/>

    <!-- Topmost lines -->
    <line color="shade/gtk:base[PRELIGHT]/1.0" x1="0" x2="width" y1="0" y2="0"/>
    <line color="shade/gtk:base[PRELIGHT]/1.35" x1="0" x2="width" y1="1" y2="1"/>
    
    <!-- Darkening of the left arch -->
    <line color="shade/gtk:base[PRELIGHT]/1.0" x1="0" x2="4" y1="1" y2="1"/>
    <line color="shade/gtk:base[PRELIGHT]/0.95" x1="0" x2="2" y1="2" y2="2"/>
    <line color="shade/gtk:base[PRELIGHT]/0.9" x1="0" x2="1" y1="3" y2="3"/>
    <line color="shade/gtk:base[PRELIGHT]/0.85" x1="0" x2="1" y1="4" y2="4"/>
    
    <line color="shade/gtk:base[PRELIGHT]/1.0" x1="width-5" x2="width" y1="1" y2="1"/>
    <line color="shade/gtk:base[PRELIGHT]/0.95" x1="width-3" x2="width" y1="2" y2="2"/>
    <line color="shade/gtk:base[PRELIGHT]/0.9" x1="width-2" x2="width" y1="3" y2="3"/>
    <line color="shade/gtk:base[PRELIGHT]/0.85" x1="width-2" x2="width" y1="4" y2="4"/>

    <!-- Bottom lines -->
    <line color="shade/gtk:base[PRELIGHT]/1.0" x1="0+left_width" x2="width-right_width" y1="top_height-1" y2="top_height-1"/>
    
</draw_ops>

