    <line color="shade/gtk:base[INSENSITIVE]/1.0" x1="0+left_width" x2="width-right_width" y1="top_height-1" y2="top_height-1"/>
    
</draw_ops>

<draw_ops name="draw_title_inactive">
	<include name="draw_title_unfocused" />
</draw_ops>

