    <line color="shade/gtk:base[INSENSITIVE]/0.8" x1="0" x2="0" y1="0" y2="top_height"/>
    <line color="shade/gtk:base[INSENSITIVE]/0.8" x1="width-1" x2="width-1" y1="0" y2="top_height"/>

    <!-- Topmost lines -->
    <line color="shade/gtk:base[INSENSITIVE]/1.0" x1="0" x2="width" y1="0" y2="0"/>
    <line color="shade/gtk:base[INSENSITIVE]/1.0" x1="0" x2="width" y1="1" y2="1"/>
    
    <!-- Darkening of the left arch -->
    <line color="shade/gtk:base[INSENSITIVE]/1.0" x1="0" x2="4" y1="1" y2="1"/>
    <line color="shade/gtk:base[INSENSITIVE]/0.95" x1="0" x2="2" y1="2" y2="2"/>
    <line color="shade/gtk:base[INSENSITIVE]/0.9" x1="0" x2="1" y1="3" y2="3"/>
    <line color="shade/gtk:base[INSENSITIVE]/0.85" x1="0" x2="1" y1="4" y2="4"/>
    
    <line color="shade/gtk:base[INSENSITIVE]/1.0" x1="width-5" x2="width" y1="1" y2="1"/>
    <line color="shade/gtk:base[INSENSITIVE]/0.95" x1="width-3" x2="width" y1="2" y2="2"/>
    <line color="shade/gtk:base[INSENSITIVE]/0.9" x1="width-2" x2="width" y1="3" y2="3"/>
    <line color="shade/gtk:base[INSENSITIVE]/0.85" x1="width-2" x2="width" y1="4" y2="4"/>
  
